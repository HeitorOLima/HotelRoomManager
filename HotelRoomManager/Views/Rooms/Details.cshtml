@model HotelRoomManager.Models.Room

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div class="row">
    <div class="col-md-6">
        <h4>Room</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Number of Occupants:</dt>
            <dd class="col-sm-9">@Model.NumberOfOccupants</dd>

            <dt class="col-sm-3">Number of Adults:</dt>
            <dd class="col-sm-9">@Model.NumberOfAdults</dd>

            <dt class="col-sm-3">Number of Children:</dt>
            <dd class="col-sm-9">@Model.NumberOfChildrem</dd>

            <dt class="col-sm-3">Price:</dt>
            <dd class="col-sm-9">@Model.Price</dd>
        </dl>
    </div>

    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(Model.ImageFiles.First().ImageBase64))
        {
            <img src="data:image/jpeg;base64,@Model.ImageFiles.First().ImageBase64" class="img-fluid" alt="Room Image" />
        }
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Details" asp-controller="Hotels" asp-route-id="@Model.HotelId">Voltar</a>
</div>

<div class="mt-4">
    <!-- Exibir todas as imagens do quarto abaixo da primeira imagem e informações do quarto -->
    @if (Model.ImageFiles != null && Model.ImageFiles.Count > 1)
    {
        <h4>Room Images</h4>
        <hr />
        <div class="row">
            @foreach (var image in Model.ImageFiles.Skip(1))
            {
                <div class="col-md-3">
                    <img src="data:image/jpeg;base64,@image.ImageBase64" class="img-fluid" alt="Room Image" />
                </div>
            }
        </div>
    }
<div/>
